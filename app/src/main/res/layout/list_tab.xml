<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewtab1"
        android:layout_width="234dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="@string/textviewtab1"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/textviewtab2"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textviewtab4"
        android:layout_centerHorizontal="true"
        android:text="@string/textviewtab2" />

    <TextView
        android:id="@+id/textviewtab3"
        android:layout_width="232dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textviewtab1"
        android:layout_centerHorizontal="true"
        android:text="@string/textviewtab3" />

    <TextView
        android:id="@+id/textviewtab4"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_below="@+id/textviewtab3"
        android:layout_centerHorizontal="true"
        android:text="@string/textviewtab4" />

    <TextView
        android:id="@+id/textviewtab5"
        android:layout_width="234dp"
        android:layout_height="44dp"
        android:layout_below="@+id/textviewtab2"
        android:layout_centerHorizontal="true"
        android:text="@string/textviewtab5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="230dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:contentDescription="@string/todo2"
        app:srcCompat="@mipmap/ic_launcherpitiessomany" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewtab5"
        android:layout_centerHorizontal="true"
        android:text="@string/button3" />
</RelativeLayout>